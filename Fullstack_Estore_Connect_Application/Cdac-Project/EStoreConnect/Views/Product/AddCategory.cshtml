
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/shared/Master.cshtml";
}
@model List<EStoreConnect.Models.ProductCategory>
<div>

    <div class="table table-bordered" style="display: flex; justify-content: center; align-items: center; width: 50%; margin-left: 300px; background-color: #574d4d; border-color: #574d4d ">
        <form method="post" action="/Product/AddCategory">
            <table>
                <tr>
                    <th style="color:white">Category:</th>
                    <th><input type="text" placeholder="Enter Category" name="pcategory" required /></th>
                </tr>
                <tr style="margin:10px">
                    <th style="color:white">Category Description:</th>
                    <th><textarea cols="25" rows="4" name="cat_description" required></textarea></th>
                </tr>
                <tr>
                    <th colspan="2"><center><button class="btn btn-primary">Add</button></center></th>
                </tr>
            </table>
        </form>
    </div>
    @if (Model!=null)
    {
        <div class="table table-striped">
            <table class="table table-responsive table-striped">
                <thead>
                    <tr>
                        <th>Category</th>
                        <th>Category Description</th>
                        <th>Action</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.pcategory</td>
                            <td>@item.cat_description</td>
                            <td>
                                <a class="btn btn-primary" href="/Product/EditCategory/@item.pcatId">Edit</a>
                                <a class="btn btn-danger" href="/Product/DeleteCategory/@item.pcatId">Delete</a>
                            </td>
                        </tr>
                    }
                </thead>
            </table>
        </div>
    }

</div>


