

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-1.9.1.js"></script>
   <script src="~/Content/nav.css"></script>
    <style>
        input[type="search"]::placeholder {
            text-align: center
        }
    </style>
</head>
<body>
    
    <div class="container-fluid">
        <div class="jumbotron" style="height:210px;background-color:#333333;border-radius:10px">
            <div class="row">
                <div class="col-lg-3" style="">
                    <img src="~/Logo/e-nexus-logo.png" style="height:100px;width:120px" />
                </div>
                <div class="col-lg-6">
                    <center>
                        <h3 style="color:ghostwhite">E-Store Connect The Digital Nexus</h3>
                        <input type="search" class="glyphicon-search" placeholder="Search" size="50" style="border-radius:10px;height:30px" />
                    </center>
                </div>
                <div class="col-lg-3" style="display:flex;justify-content:center;align-items:center">
                    <center>
                        <img src="~/Logo/imagesadmin.png" height="50" width="50" style="border-radius:150px" />
                        <p style="color:white">Admin</p>
                    </center>

                </div>
            </div>
            <div class="row">

                <div class="col-lg-12" style="height:5px">
                    <nav class="navbar navbar-default" style="background-color: #574d4d; margin: 5px; border-color: #ff6a00; margin-right: 35px">
                        <div style="margin-left:20px">
                            <!-- Brand and toggle get grouped for better mobile display -->
                            <div class="navbar-header">

                                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-1" aria-expanded="false">
                                    <span class="nav-tabs-justified"></span>
                                </button>

                            </div>

                            <!-- Collect the nav links, forms, and other content for toggling -->



                            <div class="collapse navbar-collapse" id="navbar-collapse-1" style="margin-left:25px;">
                                <center>
                                    <ul class="nav navbar-nav">

                                        <li style="margin-right:2px"><a href="/Home/Index" style="color:#ff6a00">DashBoard</a></li>
                                        <li style="margin-right:2px"><a href="/Home/Request" style="color:#ff6a00">User Request</a></li>
                                        <li style="margin-right:2px"><a href="/Order/Orders" style="color:#ff6a00">Orders</a></li>
                                        <li style="margin-right:2px"><a href="/User/Userlist" style="color:#ff6a00">Manage User</a></li>
                                        <li style="margin-right:2px"><a href="/Product/AddCategory" style="color:#ff6a00">Create Category</a></li>
                                        <li style="margin-right:2px"><a href="/Product/AddSubCategory" style="color:#ff6a00">Create SubCategory</a></li>
                                        <li style="margin-right:2px"><a href="/Product/Insert" style="color:#ff6a00">Insert Product</a></li>
                                        <li style="margin-right:2px"><a href="/Product/ShowProduct" style="color:#ff6a00">Manage Product</a></li>
                                        <li style="margin-right:2px"><a href="/Home/Logout" style="color:#ff6a00">LogOut</a></li>
                                    </ul>
                                </center>

                            </div><!-- /.navbar-collapse -->
                        </div><!-- /.container-fluid -->
                    </nav>
                </div>

            </div>
        </div>
        <div class="table table-bordered table-responsive" style="height:350px;background-color:#574d4d;">
            @RenderBody()
        </div>


        <div class="panel-footer" style="background-color:#333333;height:stretch;margin-bottom:1px;border-radius:5px">
            <div class="row">
                <div class="col-lg-4">
                    <img src="~/Logo/instaicon.png" style="height:30px;width:30px;margin-right:15px" />
                    <img src="~/Logo/twittericon.png" style="height: 30px; width: 30px; margin-right: 15px" />
                    <img src="~/Logo/facebookicon.png" style="height: 30px; width: 30px; margin-right: 15px" />
                    <img src="~/Logo/picon.png" style="height: 30px; width: 30px; margin-right: 15px" />
                    <img src="~/Logo/w2.png" style="height: 30px; width: 30px; margin-right: 15px" />
                </div>
                <div class="col-lg-4" style="display:flex;padding-left:70px;margin-top:auto">
                    <label style="color:white">©copyright BossTeam reserved all right.</label>
                </div>
                <div class="col-lg-4" style="display:flex;padding-left:70px">
                    <label style="color:#808080">
                        Contact-No: 1234567890.
                        Address:At post Hinjewadi-pune 423567.
                    </label>

                </div>
            </div>
        </div>



      


    </div>

       
   
</body>
</html>
