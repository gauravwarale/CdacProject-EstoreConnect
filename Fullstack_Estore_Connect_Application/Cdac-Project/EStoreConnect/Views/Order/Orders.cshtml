
@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/shared/Master.cshtml";
}
@model List<EStoreConnect.Models.Order>
<div>
    <div style="display: flex; justify-content: right; background-color: #574d4d">
        <a href="/Order/orders" class="btn btn-info">All Orders</a>
        <form method="post" action="/Order/Orders">
            <input type="date" name="odate" value="@System.DateTime.Today.Date" />
            <button class="btn btn-warning">Orders</button>
        </form>

    </div>
    @if (Model.Count != 0)
    {
        <center>
            <label style="color:white;justify-content:center">Total Orders:@Model.Count</label>
           
        </center>
        <table class="table table-bordered table-responsive table-striped">
            <thead>
                <tr style="background-color:#dbb7b7">
                    <th>OrderId</th>
                    <th>ShopName</th>
                    <th>CustomerId</th>
                    <th>CustomerName</th>
                    <th>OrderDate</th>
                    <th>OrderTotal</th>
                    <th>OrderStatus</th>
                    <th>ShopId</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr style="background-color:#867878;color:aliceblue">
                        <td>@order.Id</td>
                        <td>@order.Shop.Shopname</td>
                        <td>@order.User.Id</td>
                        <td>@order.User.fname @order.User.lname</td>
                        <td>@order.odate</td>
                        <td>@order.ototal</td>
                        @if (@order.ostatus=="Delivered")
                        {

                            <td style="color:green;font-weight:bolder;background-color:white">@order.ostatus</td>

                        }
                        else
                        {
                    <td style="color: red; font-weight: bolder; background-color: white">@order.ostatus</td>
                        }
                    <td>@order.Shop.Id</td>
                    </tr>
                }
            </tbody>


        </table>
    }
else
            {
                <center><h2 class="page-header" style="color:whitesmoke;justify-content:center">No Such Record Found!!</h2></center>
            }


</div>

